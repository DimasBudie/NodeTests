<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('../partials/head') %>
</head>

<body class="">
  <div class="wrapper ">
    <div class="sidebar" data-color="white" data-active-color="danger">
      <%- include('../partials/sidebar') %>
    </div>
    <div class="main-panel">
      <!-- Navbar -->
      <nav class="navbar navbar-expand-lg navbar-absolute fixed-top navbar-transparent">
        <%- include('../partials/topbar', {title : 'Configurações'}) %>
      </nav>
      <!-- End Navbar -->
      <div class="content">
        <div class="row">
          <div class="col-md-8">
            <div>
              <% if(msg != null){ %>
                <div class="alert alert-success alert-dismissible fade show">
                  <button type="button" aria-hidden="true" class="close" data-dismiss="alert" aria-label="Close">
                    <i class="nc-icon nc-simple-remove"></i>
                  </button>
                  <span>
                    <%= msg %>
                  </span>
                </div>
                <% } %>
            </div>
            <div class="card">
              <div class="card-header">
                <h4 class="card-title"></h4>
              </div>
              <div class="card-body">
                <div class="row">
                  <div class="col-md-6 pr-1">
                    <div class="form-group">
                      <label>Nome Empresa</label>
                      <input type="text" class="form-control" placeholder="user" value="<%= data.usuario %>" />
                    </div>
                  </div>
                  <div class="col-md-4 pr-1">
                      <div class="form-group">
                          <label>Upload Image</label>
                          <div class="input-group">
                              <span class="input-group-btn">
                                  <span class="btn btn-default btn-file">
                                      Browse… <input type="file" id="imgInp">
                                  </span>
                              </span>
                              <input type="text" class="form-control" readonly="">
                          </div>
                          <img id="img-upload">
                      </div>
                    
                  </div>
                </div>                
              </div>
            </div>
          </div>
          <div class="col-md-4">
            <div class="card">
              <div class="card-body">
                <div id="accordion" role="tablist" aria-multiselectable="true" class="card-collapse">
                  <!-- <h4 class="card-title">Ações</h4> -->
                  <div class="card card-plain">
                    <div class="card-header" role="tab" id="headingOne">
                      <a data-toggle="collapse" data-parent="#accordion" href="#collapseOne" aria-expanded="false" aria-controls="collapseOne"
                        class="collapsed">
                        Trocar Senha
                        <i class="nc-icon nc-minimal-down"></i>
                      </a>
                    </div>
                    <div id="collapseOne" class="collapse" role="tabpanel" aria-labelledby="headingOne">
                      <div class="card-body">
                        <form method="POST" action="/configuracao-usuario">
                          <div class="row">
                            <div class="col-md-12 pr-1">
                              <div class="form-group">
                                <label>Usuário</label>
                                <input name="usuario" type="text" class="form-control" readonly value="<%= data.usuario %>" />
                              </div>
                            </div>
                            <div class="col-md-12 pr-1">
                              <div class="form-group">
                                <label>Senha Antiga</label>
                                <input name="senhaAntiga" type="password" class="form-control" required />
                              </div>
                            </div>
                            <div class="col-md-12 pr-1">
                              <div class="form-group">
                                <label>Nova Senha</label>
                                <input name="novaSenha" type="password" class="form-control" required />
                              </div>
                            </div>
                            <div class="col-md-12 pr-1">
                              <div class="form-group">
                                <label>Repetir Nova Senha</label>
                                <input name="novaSenhaRepete" type="password" class="form-control" required />
                              </div>
                            </div>
                            <div class="col-md-12 pr-1 text-center">                              
                              <button type="submit" class="btn btn-primary">Salvar</button>
                            </div>
                          </div>
                        </form>
                      </div>
                    </div>
                  </div>                  
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <footer class="footer footer-black  footer-white ">
        <%- include('../partials/footer') %>
      </footer>
    </div>
  </div>
  <%- include('../partials/scripts') %>
    <script>
      $(document).ready(function () {
        $('.table').DataTable();

        $(document).on('change', '.btn-file :file', function() {
		var input = $(this),
			label = input.val().replace(/\\/g, '/').replace(/.*\//, '');
		input.trigger('fileselect', [label]);
		});

		$('.btn-file :file').on('fileselect', function(event, label) {
		    
		    var input = $(this).parents('.input-group').find(':text'),
		        log = label;
		    
		    if( input.length ) {
		        input.val(log);
		    } else {
		        if( log ) alert(log);
		    }
	    
		});
		function readURL(input) {
		    if (input.files && input.files[0]) {
		        var reader = new FileReader();
		        
		        reader.onload = function (e) {
		            $('#img-upload').attr('src', e.target.result);
		        }
		        
		        reader.readAsDataURL(input.files[0]);
		    }
		}

		$("#imgInp").change(function(){
		    readURL(this);
		}); 	
      });
    </script>
</body>

</html>