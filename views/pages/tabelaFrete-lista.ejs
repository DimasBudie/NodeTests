<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head') %>
</head>

<body class="">
    <div class="wrapper ">
        <div class="sidebar" data-color="white" data-active-color="danger">
            <%- include('../partials/sidebar', {ativo : 'usuario'}) %>
        </div>
        <div class="main-panel">
            <!-- Navbar -->
            <nav class="navbar navbar-expand-lg navbar-absolute fixed-top navbar-transparent">
                <%- include('../partials/topbar', {title : 'Tabela de Frete'}) %>
            </nav>
            <!-- End Navbar -->
            <div class="content">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header">
                                <form method="POST" action="/tabelaFrete">

                                    <div class="row">
                                        <div class="col-md-4 px-1">
                                            <div class="form-group">
                                                <label>Tipo Carga</label>
                                                <select class="form-control" name="type">
                                                    <option value="Carga Geral">Geral</option>
                                                    <option value="Carga Granel">Granel</option>
                                                    <option value="Carga Neogranel">NeoGranel</option>
                                                    <option value="Carga Frigorificada">Frigorificada</option>
                                                    <option value="Carga Perigosa">Perigosa</option>
                                                </select>
                                            </div>
                                        </div>
                                        <div class="col-md-2 pl-1 pt-4">
                                            <button type="submit" class="btn btn-primary">Obter Tabela</button>
                                        </div>
                                    </div>

                                </form>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header">
                                <%if(data){%>
                                <h4 class="card-title">
                                    <%=data[0].tipoCarga%>
                                </h4>
                                <%}%>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-12">
                                        <table class="table">
                                            <thead class=" text-primary">
                                                <th>De (KM) </th>
                                                <th>Ate (KM)</th>
                                                <th>Custo por KM</th>
                                            </thead>
                                            <tbody>
                                                <%if(data){  %>

                                                <% data.forEach(item => { %>
                                                <%let from = (item.distancia + 99)%>
                                                <tr>
                                                    <td>
                                                        <%= item.distancia %>
                                                    </td>
                                                    <td>
                                                        <%= from %>
                                                    </td>
                                                    <td class="editable">
                                                        <%= item.valor %>
                                                        <input type="hidden" class="editableId" value="<%=item._id%>" />

                                                    </td>
                                                </tr>
                                                <% }); %>
                                                <%}%>
                                            </tbody>
                                            <tfoot>
                                                <tr>
                                                    <td colspan="3">
                                                        <%if(data){%>
                                                        <%if(data[0].observacao){%>
                                                        <%=data[0].observacao%>
                                                        <%}%>
                                                        <%}%>
                                                    </td>
                                                </tr>
                                            </tfoot>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <footer class="footer footer-black  footer-white ">
                <%- include('../partials/footer') %>
            </footer>
        </div>
    </div>
    <%- include('../partials/scripts') %>
    <script>
        $(document).ready(function () {
            var oi;

            $(".justNumber").keydown(function (e) {
                // Allow: backspace, delete, tab, escape, enter and .
                if ($.inArray(e.keyCode, [46, 8, 9, 27, 13, 110]) !== -1 ||
                    // Allow: Ctrl+A, Command+A
                    (e.keyCode === 65 && (e.ctrlKey === true || e.metaKey === true)) ||
                    // Allow: home, end, left, right, down, up
                    (e.keyCode >= 35 && e.keyCode <= 40)) {
                    // let it happen, don't do anything
                    return;
                }
                // Ensure that it is a number and stop the keypress
                if ((e.shiftKey || (e.keyCode < 48 || e.keyCode > 57)) && (e.keyCode < 96 || e.keyCode > 105)) {
                    e.preventDefault();
                }
            });

            $('#txtNewInput').mask('0,00');

            $(".editable").dblclick(function () {
                var OriginalContent = $(this).text().trim();
                var t = $(this).children()[0].value;
                var inputhidden = $(this).children()[0];
                var cell = $(this);
                var content = $(this).html();
                $(this).html("<input type = 'text' class='justNumber' name = 'txtNewInput' id = 'txtNewInput'  value = '" + OriginalContent + "'/> ").find('input')
                    .trigger('focus')
                    .on({
                        'blur': function () {
                            $(this).trigger('closeEditable');
                        },                        
                        'keyup': function (e) {
                            if (e.which == '13') { // enter
                                $(this).trigger('saveEditable');
                            } else if (e.which == '27') { // escape
                                $(this).trigger('closeEditable');
                            }


                        },
                        'closeEditable': function () {
                            cell.html(content + "<input type='hidden' class='editableId' value='" + t + "'/>");
                        },
                        'saveEditable': function () {
                            $.ajax({
                                method: "POST",
                                url: "/atualizarFrete",
                                data: { valor: $(this).val(), id: t },
                                success: function (data) {
                                    $.notify({
                                        icon: "nc-icon nc-check-2",
                                        message: data
                                    },
                                    {
                                        type: 'success',
                                        timer: 4000,
                                        placement: {
                                            from: 'top',
                                            align: 'center'
                                        }
                                    });
                                }
                            });
                            content = $(this).val();
                            $(this).trigger('closeEditable');
                        }
                    });
            });



            $('.table').DataTable({
                "language": {
                    "url": "https://cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Portuguese.json"
                }
            });





        });

        function myFunction(e) {
            if (e.key == 'Enter') {
                alert("To aqui " + $(this));
            }

        }
    </script>

</body>

</html>